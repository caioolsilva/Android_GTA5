<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnTelaGta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gta_v"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTelaHistoria"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="#FF0000"
        android:text="Historia" />

    <Button
        android:id="@+id/btnTelaVeiculos"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="#FF0000"
        android:text="Veiculos" />

    <Button
        android:id="@+id/btnTelaCodigos"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="#FF0000"
        android:text="Codigos" />

    <Button
        android:id="@+id/btnTelaMapa"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="#FF0000"
        android:text="Mapa" />

    <Button
        android:id="@+id/btnTelaArmas"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="#FF0000"
        android:text="Armas" />
</LinearLayout>





